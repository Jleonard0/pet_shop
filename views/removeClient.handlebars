<main class="container text-start ">
    <div class="row justify-content-start align-items-start" style="min-height: 80vh;">
        <div class="row justify-content-start">
            <h2>Remover cliente</h2>
            <p class="text-secondary">Remover os cliente do seu petshop.</p>
            <form action="/funcionalidade/remover_cliente" method="post" class="text-start col-md-6">
                <label for="select_client" class="form-label m-1">Selecione qual cliente vai remover</label>
                <select id="select_client" name="select_client" class="form-select form-select-lg mb-3" aria-label="Selecione qual cliente vai remover" required>
                    {{#each listOfClients}}
                    <option value="{{this.id}}">{{this.name}} - {{this.cpf}}</option>
                    {{/each}}
                </select>
                <div class="d-flex justify-content-between my-1">
                    <button type="submit" class="btn btn-danger my-2">Remover funcion√°rio</button>
                </div>
            </form>
        </div>
    </div>
</main>