<main class="container mt-2" style="min-height: 80vh;">
    <h2>Title</h2>
    <div class="my-3 row">
        {{#each listOfFunctionalities}}
        <a href="{{this.url}}" class="my-2 text-decoration-none col-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </a>
        {{/each}}
        {{#each listOfFunctionalitiesOfAdmin}}
        <a href="{{this.url}}" class="my-2 text-decoration-none col-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</main>